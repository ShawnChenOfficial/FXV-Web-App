@page
@{
    var event_id = @TempData["Event_ID"];
    var event_name = @TempData["Event_Name"];
}
<html lang="en" class="perfect-scrollbar-off">
<head>
    <meta charset="utf-8">
    <link rel="icon" type="image/png" href="../img/Logo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name=”viewport” content="width=device-width, initial-scale=1">
    <title>
        Force X Velocity
    </title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no" name="viewport">

    <link rel="stylesheet" type="text/css" href="../sources/lib/bootstrap/dist/css/bootstrap.css" />
    <style>

        html {
            margin: 0;
            padding: 0;
        }

        body {
            background-image: url(../img/LeaderboardBGLogos.png);
            background-repeat: no-repeat;
            background-size: cover;
            background-position: top center;
        }

        .rounded {
            border-radius: 2rem !important;
        }

        h1 {
            font-size: 7rem;
        }

        h2 {
            font-size: 4.6rem;
        }

        h3 {
            font-size: 3.5rem;
        }

        .card {
            background: linear-gradient(#212121,#101010) !important;
            color: white;
            opacity: 0.6;
        }

        .carousel-item {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: top center;
            height: 100%;
            width: 100%;
        }

        .public-leaderboard-start {
            position: absolute;
            top: 0;
            left: 0;
            z-index: 999;
            height: 15%;
            width: 15%;
            background-image: url(../img/Logo.png);
            background-size: contain;
            background-repeat: no-repeat;
            cursor: pointer;
        }

        .carousel {
            background: black;
        }
    </style>
</head>
<body tag-event-id="@event_id" tag-event-name="@event_name">
    <div class="container-fluid p-0">
        <div class="public-leaderboard-start" onclick="startEvent()"></div>
        <div class="carousel slide" data-ride="carousel" data-pause="none">
            <div id="slider" class="carousel-inner">
            </div>
            <a hidden class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a hidden class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <script src="../sources/jquery/jquery-3.4.1.min.js"></script>
    <script src="/sources/lib/jquery/dist/jquery.js"></script>
    <script src="/sources/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="../sources/js/publicLeaderboardHandler.js"></script>
</body>
</html>
