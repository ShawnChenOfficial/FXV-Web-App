@model FXV.ViewModels.ResetPwd
@{
    Layout = "_Login";
}

@Html.Partial("_Loading")
<div class="container">
    <div class="row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2">
            <form class="w-100 show bg-transparent form-group" asp-action="ConfirmNewPwd">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-white">
                    <h3>
                        Enter your new password
                    </h3>
                </div>
                <span class="text-danger">@TempData["ErrorMsg"]</span>
                <div class="form-group">
                    <label asp-for="NewPwd" class="control-label text-white"></label>
                    <div class="w-100">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <ion-icon name="key"></ion-icon>
                                </div>
                            </div>
                            <input asp-for="NewPwd" class="form-control pl-2" autocomplete="off" placeholder="Your Password" />
                        </div>
                    </div>
                    <span asp-validation-for="NewPwd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPwd" class="control-label text-white"></label>
                    <div class="w-100">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <ion-icon name="key"></ion-icon>
                                </div>
                            </div>
                            <input asp-for="ConfirmNewPwd" class="form-control pl-2" autocomplete="off" placeholder="Your Password" />
                        </div>
                    </div>
                    <span asp-validation-for="ConfirmNewPwd" class="text-danger"></span>
                </div>
                <input asp-for="UID" class="form-control" placeholder="Your Password" hidden readonly value="@Model.UID" />
                <input asp-for="UserManagerToken" class="form-control" placeholder="Your Password" hidden readonly value="@Model.UserManagerToken" />
                <button id="submit" type="submit" class="btn btn-warning-customized float-right">Reset</button>
            </form>
        </div>
    </div>
</div>

@Html.Partial("_AccountLoadingScript")